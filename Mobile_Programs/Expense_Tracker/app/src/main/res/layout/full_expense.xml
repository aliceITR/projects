<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/amountBox"
            android:layout_width="241dp"
            android:layout_height="17dp"
            android:layout_marginEnd="13dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/noteBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.93"
            app:layout_constraintStart_toEndOf="@+id/amount"
            app:layout_constraintStart_toStartOf="@+id/dateBox" />

        <TextView
            android:id="@+id/category"
            android:layout_width="56dp"
            android:layout_height="19dp"
            android:text="Type:"
            app:layout_constraintBottom_toTopOf="@+id/date"
            app:layout_constraintStart_toStartOf="@+id/date" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="56dp"
            android:layout_height="17dp"
            android:text="Amount:"
            app:layout_constraintBottom_toTopOf="@+id/note"
            app:layout_constraintStart_toStartOf="@+id/note" />

        <TextView
            android:id="@+id/note"
            android:layout_width="56dp"
            android:layout_height="17dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="68dp"
            android:text="Note:"
            app:layout_constraintEnd_toStartOf="@+id/noteBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expense:"
            app:layout_constraintStart_toStartOf="@+id/category"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date"
            android:layout_width="55dp"
            android:layout_height="19dp"
            android:text="Date:"
            app:layout_constraintBottom_toTopOf="@+id/amount"
            app:layout_constraintStart_toStartOf="@+id/amount" />

        <TextView
            android:id="@+id/nameBox"
            android:layout_width="237dp"
            android:layout_height="16dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="14dp"
            android:text="nameBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/categoryBox"
            android:layout_width="238dp"
            android:layout_height="0dp"
            android:layout_marginEnd="14dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/dateBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/category"
            app:layout_constraintStart_toStartOf="@+id/nameBox" />

        <TextView
            android:id="@+id/noteBox"
            android:layout_width="244dp"
            android:layout_height="18dp"
            android:layout_marginStart="67dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="9dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/note"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dateBox"
            android:layout_width="238dp"
            android:layout_height="18dp"
            android:layout_marginEnd="13dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/amountBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.996"
            app:layout_constraintStart_toEndOf="@+id/date"
            app:layout_constraintStart_toStartOf="@+id/categoryBox" />

        <TextView
            android:id="@+id/iDBox"
            android:layout_width="244dp"
            android:layout_height="19dp"
            android:layout_marginStart="159dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="67dp"
            android:layout_marginTop="90dp"
            android:text="ID:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>